<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="LoginTestSuite" verbose="1" >
    <test name="LoginTests_Chrome_EnglishLocale" >
        <parameter name="browserName" value="Chrome"/>
        <parameter name="envURL" value="https://ua.linkedin.com/"/>
               <classes>
            <class name="test.LinkedInLoginTests" />
        </classes>
    </test>
    <test name="LoginTests_Chrome_GermanLocale" >
        <parameter name="browserName" value="Chrome"/>
        <parameter name="envURL" value="https://de.linkedin.com/"/>
        <classes>
            <class name="test.LinkedInLoginTests" />
        </classes>
    </test>
    <test name="LoginTests_Chrome_RussianLocale" >
        <parameter name="browserName" value="Chrome"/>
        <parameter name="envURL" value="https://ru.linkedin.com/"/>
        <classes>
            <class name="test.LinkedInLoginTests" />
        </classes>
    </test>
    <test name="LoginTests_Firefox_EnglishLocale" >
        <parameter name="browserName" value="firefox"/>
        <parameter name="envURL" value="https://ua.linkedin.com/"/>
        <classes>
            <class name="test.LinkedInLoginTests" />
        </classes>
    </test>
    <test name="LoginTests_Firefox_GermanLocale" >
        <parameter name="browserName" value="firefox"/>
        <parameter name="envURL" value="https://de.linkedin.com/"/>
        <classes>
            <class name="test.LinkedInLoginTests" />
        </classes>
    </test>
    <test name="LoginTests_Firefox_RussianLocale" >
        <parameter name="browserName" value="firefox"/>
        <parameter name="envURL" value="https://ru.linkedin.com/"/>
        <classes>
            <class name="test.LinkedInLoginTests" />
        </classes>
    </test>
</suite>
